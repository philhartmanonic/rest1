<h1>All of the restaurants</h1>
<h2><%= link_to 'Create a restaurant', new_restaurant_path %></h2>

<ul>
	<% @restaurants.each do |restaurant| %>
	<li>
		<span class="show">
			<%= link_to restaurant.name, restaurant %>
		</span>
		<% if restaurant.is_owner?(current_owner) %>
			<span class="edit">
				<%= link_to 'Edit', edit_restaurant_path(restaurant) %>
			</span>
			<span class="delete">
				<%= link_to 'Destroy', restaurant_path(restaurant), method: 'delete' %>
			</span>
		<% end %>
	</li>
	<% end %>
</ul>